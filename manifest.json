{
  "manifest_version": 3,
  "name": "Endpoint Eye - Blubird Interactive LTD",
  "version": "1.0",
  "description": "Logs API response times for debugging and performance monitoring",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}